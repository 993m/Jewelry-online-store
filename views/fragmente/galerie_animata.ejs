<div id="galerie_animata">
    <%
        d = new Date();
        let timp_curent = d.getHours() * 60 + d.getMinutes();
        
        for(let imag of locals.imagini){
            let st, dr, o1, m1, o2, m2; 
            if(imag.timp) [st, dr] = imag.timp.split("-");
            [o1, m1] = st.split(":");
            [o2, m2] = dr.split(":");
            st = parseInt(o1) * 60 + parseInt(m1);
            dr = parseInt(o2) * 60 + parseInt(m2);

            if(st <= timp_curent && timp_curent <= dr){  
        %> 
        <figure>
            <picture>
                <img src="<%- imag.mare  %>" alt="<%- imag.titlu %>"/>
            </picture>
            <figcaption> <%- imag.descriere  %></figcaption>
        </figure>
    <% } } %>
</div>